FROM postgres:12.4-alpine

# نسخ ملف init.sql داخل الـ container
# لو init.sql موجود على الجهاز المحلي، انسخه داخل image
COPY init.sql /docker-entrypoint-initdb.d/

# تعيين environment variables للـ Postgres
ENV POSTGRES_USER=postgres
ENV POSTGRES_PASSWORD=postgres
ENV POSTGRES_DB=postgres

# كشف البورت الافتراضي
EXPOSE 5432

# أمر التشغيل الافتراضي يأتي مع image postgres
# CMD ["postgres"]   # مش لازم تكتبه لأنه موجود أصلاً
